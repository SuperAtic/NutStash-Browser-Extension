{
  "manifest_version": 2,
  "name": "Nutstash Wallet Embedder",
  "version": "1.1",
  "description": "Embed wallet.nutstash.app in your browser.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "48": "images/icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "images/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html",
    "chrome_style": false
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
